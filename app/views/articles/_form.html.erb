<%= render 'shared/errors' ,obj: @article %>

<div class="row">
  <div class="col-xl-12">
    <%= form_for(@article, :html => {class: "form-horizontal", role: "form"}) do |f|   %>
    <div class="form-group">
      <div class="control-label col-sm-2">
        <%= f.label :title, class: "title1" %>
      </div>
      <div class="col-sm-12">
      <%= f.text_field :title ,class:"form-control" , placeholder: "Title of article", autofocus: true %>
    </div>
  </div>


  <div class="form-group">
    <div class="control-label col-sm-2">
      <%= f.label :description, class: "description1" %>
    </div>
    <div class="col-sm-12">
    <%= f.text_area :description, rows: 8 ,class:"form-control" , placeholder: "Body of article", autofocus: true %>
    </div>
  </div>

  <div class="form-group">
    <div class="col-sm-10">
      <%= f.submit class: 'btn btn-primary btn-lg' %>
    </div>
  </div>

    <%end%>
    <div class="col-sm-12 " style="font-size:15px;,">
      [<%=link_to "Cancel Request & Return to Article Listing", articles_path %>]
  </div>
  </div>
</div>
