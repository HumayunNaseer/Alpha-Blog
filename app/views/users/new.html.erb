<h1 align = "center"> Signup for Alpha-Blog</h1>

<%= render 'shared/errors' ,obj: @user %>

<div class="row">
  <div class="col-xl-12">
    <%= form_for(@user, :html => {class: "form-horizontal", role: "form"}) do |f|   %>
    <div class="form-group">
      <div class="control-label col-sm-2">
        <%= f.label :username, class: "title1" %>
      </div>
      <div class="col-sm-12">
      <%= f.text_field :username ,class:"form-control" , placeholder: "Enter user name", autofocus: true %>
    </div>
  </div>


  <div class="form-group">
    <div class="control-label col-sm-2">
      <%= f.label :email, class: "description1" %>
    </div>
    <div class="col-sm-12">
    <%= f.email_field :email, rows: 8 ,class:"form-control" , placeholder: "Enter email", autofocus: true %>
    </div>
  </div>

  <div class="form-group">
    <div class="control-label col-sm-2">
      <%= f.label :password, class: "description1" %>
    </div>
    <div class="col-sm-12">
    <%= f.password_field :password, rows: 8 ,class:"form-control" , placeholder: "Enter Password", autofocus: true %>
    </div>
  </div>

  <div class="form-group">
    <div class="col-sm-10">
      <%= f.submit "Sign up", class: 'btn btn-primary btn-lg' %>
    </div>
  </div>

    <%end%>
    <div class="col-sm-12  return" style="font-size:20px;,">
      [<%=link_to "Cancel Request & Return to Article Listing", articles_path %>]
  </div>
  </div>
</div>
